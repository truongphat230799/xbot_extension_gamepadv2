<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="ROBOCON" colour="#44cbc6" icon="flag">
    <block type="robocon_follow_line_until">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="condition">
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>
    <block type="robocon_follow_line_delay">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>
    <block type="robocon_turn_until_line_detected">
      <value name="m1_speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="m2_speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>
    <block type="robocon_turn_until_condition">
      <value name="m1_speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
      <value name="m2_speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="condition">
      </value>
      <value name="timeout">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>
  </category>

  <category name="GAMEPAD" colour="#44cbc6" icon="gamepad">
    <block type="gamepad_init"/>

    <block type="gamepad_mode"/>

    <block type="gamepad_speed_btn"/>

    <block type="gamepad_set_gripper"/>

    <block type="gamepad_set_forklift"/>

    <block type="gamepad_set_ball_launcher"/>

    <block type="gamepad_set_led_rgb">
      <value name="color">
        <shadow type="colour_picker">
          <field name="COLOUR">#0000ff</field>
        </shadow>
      </value>
    </block>

    <block type="gamepad_set_rumble">
      <value name="force">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="duration">
        <shadow type="math_number">
          <field name="NUM">1000</field>
        </shadow>
      </value>
    </block>

    <block type="gamepad_line_btn">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">30</field>
        </shadow>
      </value>
    </block>

    <block type="gamepad_turbo_btn"/>

    <block type="gamepad_change_mode_btn"/>

    <block type="gamepad_processing"/>

    <block type="gamepad_is_connected" />

    <block type="gamepad_set_servo">
      <value name="angle_min">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>

      <value name="angle_max">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>

      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>

  </category>
</xml>
